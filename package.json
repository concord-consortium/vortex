{
  "name": "vortex",
  "version": "0.0.1",
  "description": "Vortex: the data capture system where all your data disappears into a black hole",
  "main": "index.js",
  "jest": {
    "testURL": "https://vortex.unexisting.url.com",
    "setupFilesAfterEnv": [
      "<rootDir>src/setupTests.ts",
      "jest-localstorage-mock"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/cypress/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "src/utilities/test-utils.ts"
    ],
    "moduleNameMapper": {
      "\\.svg$": "<rootDir>/__mocks__/svgMock.js",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|sass|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "scripts": {
    "start": "webpack-dev-server --inline --hot --content-base dist/ --host 0.0.0.0",
    "start:secure": "webpack-dev-server --https --inline --hot --content-base dist/ --cert ./LocalhostCertificates/localhost.pem --key ./LocalhostCertificates/localhost.key",
    "start:secure:no-certs": "webpack-dev-server --https --inline --hot --content-base dist/",
    "build": "npm-run-all lint:build clean build:all",
    "build:all": "npm-run-all --parallel build:web build:cordova-app",
    "build:web": "webpack --mode production --devtool false",
    "build:cordova-app": "webpack --config webpack.config.cordova-app.js --mode production --devtool false",
    "build:cordova-app:dev": "webpack --config webpack.config.cordova-app.js",
    "clean": "rimraf dist",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "lint:build": "tslint -c tslint-build.json 'src/**/*.{ts,tsx}'",
    "lint:fix": "tslint -c tslint-build.json --fix 'src/**/*.{ts,tsx}'",
    "lint:unused": "tsc --noUnusedLocals --project .",
    "test": "jest",
    "test:all": "npm-run-all build test start",
    "test:coverage": "jest --coverage",
    "test:debug": "node --nolazy --inspect-brk ./node_modules/.bin/jest --runInBand --no-cache",
    "test:watch": "jest --watch",
    "test:coverage:watch": "jest --coverage --watchAll",
    "test:cypress": "cypress run",
    "test:cypress:open": "cypress open",
    "test:full": "npm-run-all test test:cypress"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/concord-consortium/vortex.git"
  },
  "author": "Concord Consortium",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/concord-consortium/vortex/issues"
  },
  "homepage": "https://github.com/concord-consortium/vortex#readme",
  "devDependencies": {
    "@cypress/webpack-preprocessor": "^4.1.1",
    "@svgr/webpack": "^5.1.0",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/enzyme": "^3.10.4",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^25.1.0",
    "@types/js-base64": "^2.3.1",
    "@types/jsonwebtoken": "^8.3.7",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/react-jsonschema-form": "^1.6.8",
    "@types/semver": "^7.1.0",
    "@types/uuid": "^3.4.6",
    "autoprefixer": "^9.7.4",
    "babel-core": "^6.26.3",
    "babel-jest": "^25.1.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "cypress": "^3.8.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "file-loader": "^5.0.2",
    "fork-ts-checker-webpack-plugin": "^4.0.3",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^25.1.0",
    "jsdom": "15.1.1",
    "jest-localstorage-mock": "^2.4.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^3.0.0",
    "rimraf": "^3.0.1",
    "sass-loader": "^8.0.2",
    "script-loader": "^0.7.2",
    "style-loader": "^1.1.3",
    "ts-jest": "^25.0.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tslint": "^6.0.0",
    "tslint-loader": "^3.6.0",
    "tslint-react": "^4.2.0",
    "typescript": "^3.7.5",
    "url-loader": "^3.0.0",
    "wait-on": "^4.0.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  },
  "dependencies": {
    "@concord-consortium/lara-plugin-api": "^3.1.2",
    "@concord-consortium/token-service": "^1.2.0",
    "ace-builds": "^1.4.8",
    "ajv": "5.5.2",
    "aws-sdk": "^2.454.0",
    "client-oauth2": "^4.2.5",
    "eventemitter3": "^4.0.0",
    "firebase": "^7.6.1",
    "iframe-phone": "^1.2.0",
    "js-base64": "^2.5.1",
    "jsonwebtoken": "^8.5.1",
    "jsqr": "^1.2.0",
    "lines-and-columns": "^1.1.6",
    "qrcode-svg": "^1.1.0",
    "react": "^16.12.0",
    "react-ace": "^8.0.0",
    "react-dom": "^16.12.0",
    "react-json-editor-ajrm": "^2.5.9",
    "react-jsonschema-form": "^1.8.1",
    "semver": "^7.1.1"
  }
}
