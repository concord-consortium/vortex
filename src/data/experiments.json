        "properties": {
          "studySite": {
            "title": "Study Site",
            "type": "string",
            "enum": [
              "Study Site #1",
              "Study Site #2"
            ],
            "enumNames": [
              "Study Site #1",
              "Study Site #2"
            ]
          },
          "label": {
